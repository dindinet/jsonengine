    <filter-mapping>
        <filter-name>datastoreFilter</filter-name>
        <url-pattern>/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
    </filter-mapping>
    
    <servlet> 
      <servlet-name>FrontServlet</servlet-name> 
      <servlet-class>com.jsonengine.http.CRUDServlet</servlet-class> 
    </servlet> 
 
    <servlet-mapping> 
      <servlet-name>FrontServlet</servlet-name> 
      <url-pattern>/_je/*</url-pattern> 
    </servlet-mapping>
  
    <servlet> 
      <servlet-name>KtrWjrServiceServlet</servlet-name> 
      <servlet-class>bufferings.ktr.wjr.server.service.KtrWjrServiceServlet</servlet-class> 
    </servlet> 
 
    <servlet-mapping> 
      <servlet-name>KtrWjrServiceServlet</servlet-name> 
      <url-pattern>/ktrwjr/ktrwjr/ktrwjr.s3gwt</url-pattern> 
    </servlet-mapping>
  
    <security-constraint>
        <web-resource-collection>
            <url-pattern>*.jsp</url-pattern>
        </web-resource-collection>
        <auth-constraint>
        </auth-constraint>
    </security-constraint>

    <security-constraint> 
      <web-resource-collection> 
        <url-pattern>/ktrwjr/*</url-pattern> 
        <url-pattern>/_admin/*</url-pattern> 
      </web-resource-collection> 
      <auth-constraint> 
        <role-name>admin</role-name> 
      </auth-constraint> 
    </security-constraint>

</web-app>